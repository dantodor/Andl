// Borg model - option

option := {{ name:'', value }}

// set option
put_option_id(oid, opt:option) => do {
    option := [ ?(name = oid) ]
    option := union opt [ ?(name <> '' and value <> '') ]
}

// Find option by id
get_option_id(oid) => do {
    option[ ?(name = oid) ]
}

// Find all options
get_option() => do {
    option
}

