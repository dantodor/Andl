<Window x:Class="Andl.Workshop.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Andl.Workshop"
        mc:Ignorable="d"
        Title="About Andl Workshop" Height="300" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
    <TextBlock HorizontalAlignment="Center" Margin="0,75,0,0" Text="Andl Workshop 1.0" VerticalAlignment="Top" FontSize="18.667"/>
    <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Copyright 2016 © David M. Bennett" VerticalAlignment="Top" FontSize="13.333" Margin="0,150,0,0"/>
    <Button x:Name="button" Content="Ok" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="50" IsCancel="True" IsDefault="True"/>

  </Grid>
</Window>
