// translation of sample application from http://search.cpan.org/dist/DBIx-Class/lib/DBIx/Class/Manual/Example.pod

// create the database relvars
artist  := {{ artistid:0, name:'' }}
cd      := {{ cdid:0, artistid:0, title:'', year:0 }}
track   := {{ trackid:0, cdid:0, title:'' }}

// some data in temporary relvars, with auto-generated ordinals
$artist_data := {{name:''}
  ( 'Michael Jackson' ), 
  ( 'Eminem' ),
} .set{ *artistid := ord() }

$cd_data := {{ title:'', name:'' }
  ( 'Thriller',                'Michael Jackson' ),
  ( 'Bad',                     'Michael Jackson' ),
  ( 'The Marshall Mathers LP', 'Eminem' ),
} .set{ *cdid := ord() }

$track_data := {{ title:'', cd:'' }
   ( 'Beat It'         , 'Thriller' ),
   ( 'Billie Jean'     , 'Thriller' ),
   ( 'Dirty Diana'     , 'Bad' ),
   ( 'Smooth Criminal' , 'Bad' ),
   ( 'Leave Me Alone'  , 'Bad' ),
   ( 'Stan'            , 'The Marshall Mathers LP' ),
   ( 'The Way I Am'    , 'The Marshall Mathers LP' ),
 } .set{ *trackid := ord() }

// update the database relvars
update artist union $artist_data
update cd union ($cd_data join artist) .set{ title, cdid, artistid, year:=0}
update track union ($track_data join cd .set{ *cd := title }) .set{ trackid, title, cdid }

// functions to answer various queries
get_tracks_by_cd(t:'') => cd .where(title = t) .set{ *title }  join track
get_tracks_by_artist(a:'') => (artist .where(name = a) .set{ *name } join cd) .set{ cdid } join track
get_cd_by_track(t:'') => track  .where(title = t) .set{ cdid }  join cd
get_cds_by_artist(a:'') => artist .where(name = a) .set{ artistid }  join cd
get_artist_by_track(t:'') => (track .where(title = t) .set{ cdid } join cd) .set{ artistid } join artist
get_artist_by_cd(t:'') => (cd .where(title = t) .set{ cdid } join cd) .set{ artistid } join artist

// first show the raw data

crlf := h'd a'
write(crlf & "=== Sample data ===" & crlf)
write(artist.pp)
write(crlf.pp)
write(cd.pp)
write(crlf.pp)
write(track.pp)

// now do the queries

show(title:'', data:{{ str:'' }}) => do {
    output := title & crlf & data .set{ fold(&, "  " & str & crlf) } 
}

output := crlf & "=== Query results ===" & crlf
show("Track title:", get_tracks_by_cd('Bad') .set{ str:=title } )
show("Track title:", get_tracks_by_artist('Michael Jackson') .set{ str:=title } )
show("CD title:", get_cd_by_track('Stan') .set{ str:=title } )
show("CD title:", get_cds_by_artist('Michael Jackson') .set{ str:=title } )
show("Artist:", get_artist_by_track('Dirty Diana') .set{ str:=name } )
show("Artist:", get_artist_by_cd('The Marshall Mathers LP') .set{ str:=name } )
